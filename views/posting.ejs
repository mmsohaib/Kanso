<% include ./partials/header %>


      <form class="form-horizontal" role="form" method="post" action="posting" onsubmit="return getLatLng()">

         <h3>Posting a property</h3>
            <div class="form-group">
                <label for="street" class="col-sm-3 control-label">Street</label>
                <div class="col-sm-9">
                    <input type="text" id="street" name="street" placeholder="Enter prperty street" class="form-control" autofocus required>
                </div> 
            </div>

            <div class="form-group">
                <label for="city" class="col-sm-3 control-label">City</label>
                <div class="col-sm-9">
                    <input type="text" id="city" name="city" placeholder="Enter prperty city" class="form-control" autofocus required>
                </div> 
            </div>

            <div class="form-group">
                <label for="state" class="col-sm-3 control-label">State</label>
                <div class="col-sm-9">
                    <input type="text" id="state" name="state" placeholder="Enter prperty State" class="form-control" autofocus required>
                </div> 
            </div>

            <div class="form-group">
                <label for="type" class="col-sm-3 control-label">Type</label>
                <div class="col-sm-9">
                    <input type="text" id="type" name="type" placeholder="Prperty type" class="form-control" autofocus required>
                </div> 
            </div>

            <div class="form-group">
                <label for="room" class="col-sm-3 control-label">Num of Rooms</label>
                <div class="col-sm-9">
                    <input type="text" id="room" name="room" placeholder="Enter Num of Room" class="form-control" autofocus required>
                </div> 
            </div>

            <div class="form-group">
                <label for="bath" class="col-sm-3 control-label">Num of Bath</label>
                <div class="col-sm-9">
                    <input type="text" id="bath" name="bath" placeholder="Enter Num of Bath" class="form-control" autofocus required>
                </div> 
            </div>


            <div class="form-group">
                <label for="parking" class="col-sm-3 control-label">Num of Parking</label>
                <div class="col-sm-9">
                    <input type="text" id="parking" name="parking" placeholder="Enter Num of Parking" class="form-control" autofocus required>
                </div> 
            </div>

            <div class="form-group">
                <label for="price" class="col-sm-3 control-label">Price</label>
                <div class="col-sm-9">
                    <input type="text" id="price" name="price" placeholder="Enter prperty price" class="form-control" autofocus required>
                </div> 
            </div>

            <div class="form-group">
                <label for="description" class="col-sm-3 control-label">Description</label>
                <div class="col-sm-9">
                    <input type="text" id="description" name="description" placeholder="Enter prperty description" class="form-control" autofocus required>
                </div> 
            </div>


            <div class="form-group">
                <label for="image" class="col-sm-3 control-label">Image</label>
                <div class="col-sm-9">
                    <input type="text" id="image" name="image" placeholder="Enter prperty image" class="form-control" autofocus required>
                </div> 
            </div>

            
            <input type="hidden" value="1" name="listed_by">
            <input type="hidden" id="lat" value="lat" name="lat">
            <input type="hidden" id="lng" value="lng" name="lng">

            <div class="form-group">
                <button type="submit" class="registerbtn btn btn-primary">Posting</button>
            </div>

            

      </form>

<% include ./partials/footer %>